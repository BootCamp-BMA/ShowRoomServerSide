doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Sign Up
    // Bootstrap 5 with Dark Mode
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js")
  body(class="bg-dark text-light")
    .container
      .row
        .col-md-6.offset-md-3
          h2.text-center Sign Up
          form(action="/api/auth/register", method="POST")
            .mb-3
              label(for="firstName") First Name
              input.form-control(type="text", name="firstName", placeholder="Enter First Name", required=true)
            .mb-3
              label(for="lastName") Last Name
              input.form-control(type="text", name="lastName", placeholder="Enter Last Name", required=true)
            .mb-3
              label(for="email") Email
              input.form-control(type="email", name="email", placeholder="Enter Email", required=true)
            .mb-3
              label(for="password") Password
              input.form-control(type="password", name="password", placeholder="Enter Password", required=true)
            .mb-3
              label(for="phoneNum") Phone Number
              input.form-control(type="text", name="phoneNum", placeholder="Enter Phone Number", required=true)
            button.btn.btn-primary.btn-block(type="submit") Register
